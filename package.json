{
  "name": "jekyll-cdn-site",
  "version": "1.0.0",
  "description": "Custom Jekyll site about CDN and cloud technologies",
  "scripts": {
    "build": "bundle exec jekyll build",
    "serve": "bundle exec jekyll serve --livereload",
    "css:build": "postcss assets/css/style.css -o assets/css/output.css",
    "css:watch": "postcss assets/css/style.css -o assets/css/output.css --watch",
    "validate": "html-validate _site",
    "minify": "html-minifier-terser --input-dir _site --output-dir _site --file-ext html --minify-css --minify-js"
  },
  "devDependencies": {
    "tailwindcss": "^3.3.0",
    "autoprefixer": "^10.4.0",
    "postcss": "^8.4.0",
    "html-validate": "^8.7.0",
    "html-minifier-terser": "^7.2.0"
  }
}
