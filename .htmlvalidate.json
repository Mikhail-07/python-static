# HTML validation configuration
{
  "extends": ["html-validate:recommended"],
  "rules": {
    "doctype-style": "off",
    "no-inline-style": "off",
    "no-style-tag": "off",
    "script-type": "off",
    "no-self-closing": "off"
  },
  "transform": {
    ".*\\.html$": ["html-validate/lib/transforms/transform-html"]
  }
}